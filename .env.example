# =============================================
# Orchestrator Environment Configuration
# =============================================
# Copy this file to .env and customize values.

# --- General ---
LOG_LEVEL=INFO
# Set to "true" to enable /docs (Swagger UI)
ENABLE_DOCS=false

# --- Database ---
SERVICES__DATABASE_URL=postgresql+asyncpg://orchestrator:orchestrator@postgres:5432/orchestrator
SERVICES__STATS_RETENTION_DAYS=30

# --- Services ---
SERVICES__GEMINI_BASE_URL=https://generativelanguage.googleapis.com
SERVICES__VERTEX_BASE_URL=https://us-central1-aiplatform.googleapis.com
SERVICES__MAX_RETRIES=10

# --- Security ---
SECURITY__ADMIN_SECRET=change-me-to-a-long-random-string
SECURITY__ADMIN_USERNAME=admin
# Generate with: python -c "from app.security.auth import AuthManager; print(AuthManager().hash_password('your-password'))"
SECURITY__ADMIN_PASSWORD_HASH=

# Comma-separated list of allowed client IPs for proxy, or ["*"] for all
SECURITY__ALLOWED_CLIENT_IPS=["*"]

# CORS origins (JSON list). Use ["*"] to allow all origins.
SECURITY__CORS_ORIGINS=["*"]

# Trust X-Forwarded-For / X-Real-IP headers (enable behind reverse proxy)
# SECURITY__TRUST_PROXY_HEADERS=true

# Set to true when running behind HTTPS reverse proxy
# SECURITY__COOKIE_SECURE=true

# --- Paths ---
# PATHS__CREDS_ROOT=/app/credentials

# --- Auth / JWT ---
# JWT_SECRET_FILE=/app/secrets/jwt_secret.key
# TOKEN_EXPIRE_MINUTES=30
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_DURATION_MINUTES=15

# --- Encryption ---
# ENCRYPTION_KEY_FILE=/app/secrets/master.key
